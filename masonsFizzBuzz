
<script>
var num = Number(prompt("enter a number "));
  for (i = 1; i <= 100; i++) {
    if (num % 3 == 0 && num % 5 == 0) {
      alert("fizzbuzz");
      break; }
    else if (num % 3 ==0) {
      alert("fizz");
      break; } 
    else if (num % 5 == 0) { 
      alert("buzz");
      break; }
    else if (isNaN(num)) { 
      alert("That's not a number. Please input a number.");
      break; }
    else  {
      alert("that's just a boring number ");}} 
</script>
